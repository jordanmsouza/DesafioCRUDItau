@model IEnumerable<DesafioCRUDItau.Models.TipoSolicitacao>

@{
    ViewData["Title"] = "Listagem Tipo de Solicitação";
}

<h1>Tipo de Solicitação</h1>

<p>
    <a asp-action="Create">Cadastrar Novo Tipo de Solicitação</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
